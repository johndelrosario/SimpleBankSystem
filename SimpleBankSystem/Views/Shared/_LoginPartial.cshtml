@using Microsoft.AspNetCore.Identity
@using SimpleBankSystem.Data.Identity;
@using SimpleBankSystem.Data.Contexts;

@inject SignInManager<User> SignInManager
@inject UserManager UserManager
@inject SimpleBankContext Context

@{ 
    var currentUser = await UserManager.GetUserAsync(User);
}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-controller="Account" asp-action="Transactions">
                    <div>Hello @UserManager.GetUserName(User)!</div>
                    <div>Balance: @currentUser.GetBalance(Context).ToString("N2")</div>
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}