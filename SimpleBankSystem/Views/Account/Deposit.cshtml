@model SimpleBankSystem.ViewModels.Account.Deposit

@{
    ViewData["Title"] = "Deposit";
}

<h2>Deposit</h2>

<h4>Please enter your deposit amount.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit" asp-antiforgery="true" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(Model.IsSuccess.HasValue)
            {
                <div class="@(Model.IsSuccess.Value ? "text-success" : "text-danger") transaction-message">
                    @Model.Message
                </div>
            }
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>